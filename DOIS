package atividade.pkg8;

import java.util.Scanner;

public class Atividade8 {

    public static void impressão(int n) {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(j + " ");
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        Scanner leiturasentradas = new Scanner(System.in);
        System.out.print("Digite um número inteiro: ");

        try {
            int n = leiturasentradas.nextInt();
            impressão(n);
        } catch (Exception e) {
            System.out.println("Por favor, digite um número inteiro válido.");
        } finally {

        }
    }
}
