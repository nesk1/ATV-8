package atividade.pkg8;

import java.util.Scanner;

public class Atividade8 {

    public static int somatres(int a, int b, int c) {
        return a + b + c;
    }

    public static void main(String[] args) {
        Scanner cachoro = new Scanner(System.in);

        // Solicita ao usuário para inserir três números
        System.out.print("Digite o primeiro número: ");
        int n1 = cachoro.nextInt();

        System.out.print("Digite o segundo número: ");
        int n2 = cachoro.nextInt();

        System.out.print("Digite o terceiro número: ");
        int n3 = cachoro.nextInt();

        // Chama a função somarTresNumeros() com os números inseridos e imprime o resultado
        int resultado = somatres(n1, n2, n3);
        System.out.println("A soma dos três números é: " + resultado);

    }
}
